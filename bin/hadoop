#!/usr/bin/env bash

# Run palletops hadoop

BINDIR=`dirname $0`
LIBDIR=${LIBDIR:-${BINDIR}/../lib/}

# Java options
XMS=-Xms96m
XMX=-Xmx1g
JAVA_ARGS="-XX:+UseConcMarkSweepGC -XX:+CMSIncrementalMode"

java -server $XMX $XMS $JAVA_ARGS -cp "${LIBDIR}*" clojure.main \
 --main palletops.cluster.hadoop.cli "$@"
